@model SignUpVM


<div class="site__body">
    <div class="page-header">
        <div class="page-header__container container">
            <div class="page-header__breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Home</a>
                            <svg class="breadcrumb-arrow"
                                 width="6px" height="9px">
                                <use xlink:href="images/sprite.svg#arrow-rounded-right-6x9"></use>
                            </svg>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Sing Up</li>
                    </ol>
                </nav>
            </div>
            <div class="page-header__title">
                <h1>Sing Up</h1>
            </div>
        </div>
    </div>
    <div class="block">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 d-flex mt-4 mt-md-0">
                    <div class="card flex-grow-1 mb-0">
                        <div class="card-body">
                            <h3 class="card-title">Sing Up</h3>
                            @if (TempData["AccountErrorMessage"] != null)
                            {
                                <div class="alert alert-danger mb-3">
                                    TempData["AccountErrorMessage"].ToString();
                                </div>
                            }

                            <form method="post">

                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input type="text" asp-for="FullName" class="form-control" placeholder="exp:Con Vilis">
                                    <span class="text-danger my-2" asp-validation-for="FullName"></span>
                                </div>

                                <div class="form-group">
                                    <label>Age</label>
                                    <select class="form-control" asp-for="Age" aria-label="Defaul">
                                        @for (int i = DateTime.Now.Year - 18; i >= DateTime.Now.Year - 100; i--)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="d-block">Phone Number</label>
                                    <div class="input-group">

                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="PhoneNumber">+994</span>
                                        </div>
                                        <input type="text" type="number" asp-for="PhoneNumber" class="form-control" placeholder="exp:9999999">
                                    </div>
                                    <span class="text-danger my-2" asp-validation-for="PhoneNumber"></span>

                                </div>

                                <div class="form-group">
                                    <label>Email address</label> <input type="email" asp-for="Email" class="form-control" placeholder="exp: example@gmail.com">
                                    <span class="text-danger my-2" asp-validation-for="Email"></span>
                                </div>

                                <div class="form-group">
                                    <label>Gender</label>
                                    <select class="form-control" asp-for="Gender" aria-label="Defaul">
                                        <option value="@true">Male</option>
                                        <option value="@false">Female</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>Location</label> <input type="text" asp-for="Location" class="form-control" placeholder="exp: Amerika.Washington,District of Columbia">
                                    <span class="text-danger my-2" asp-validation-for="Location"></span>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                                    <span class="text-danger my-2" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                                    <span class="text-danger my-2" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="d-flex justify-content-between mt-4 py-3">
                                    <button type="submit" class="btn btn-primary ">
                                        Create Account
                                    </button>
                                    <a class="btn btn-secondary " asp-controller="Account" asp-action="Login">
                                        Login
                                    </a>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

</script>