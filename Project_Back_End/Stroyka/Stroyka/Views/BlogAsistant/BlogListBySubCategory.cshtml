@model BlogListBySubCategoryVM


<div class="site__body">
    <div class="page-header">
        <div class="page-header__container container">
            <div class="page-header__breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Home</a>
                            <svg class="breadcrumb-arrow"
                                 width="6px" height="9px">
                                <use xlink:href="/images/sprite.svg#arrow-rounded-right-6x9"></use>
                            </svg>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/Blog/Index">Blog</a>
                            <svg class="breadcrumb-arrow"
                                 width="6px" height="9px">
                                <use xlink:href="/images/sprite.svg#arrow-rounded-right-6x9"></use>
                            </svg>
                        </li>
                        <li class="breadcrumb-item active">
                            Category
                            <svg class="breadcrumb-arrow"
                                 width="6px" height="9px">
                                <use xlink:href="/images/sprite.svg#arrow-rounded-right-6x9"></use>
                            </svg>
                        </li>
                        <li class="breadcrumb-item active">
                            @Model.SubCategory.BlogCategory.Name
                            <svg class="breadcrumb-arrow"
                                 width="6px" height="9px">
                                <use xlink:href="/images/sprite.svg#arrow-rounded-right-6x9"></use>
                            </svg>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.SubCategory.Name</li>
                    </ol>
                </nav>
            </div>
            <div class="page-header__title">
                <h1>@Model.SubCategory.Name</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="block">
                    <div class="posts-view">
                        <div class="posts-view__list posts-list posts-list--layout--list">
                            <div class="posts-list__body">
                                @foreach (var item in Model.Blogs)
                                {
                                    <div class="posts-list__item">
                                        <div class="post-card post-card--layout--list post-card--size--nl">
                                            <div class="post-card__image">
                                                <a href="/Blog/Single/@item.Id">
                                                    <img src="~/images/posts/@item.Image" alt="">
                                                </a>
                                            </div>
                                            <div class="post-card__info">
                                                <div class="post-card__category">
                                                    <a href="/BlogAsistant/BlogListByCategory/@item.Category.Id">@item.Category.Name</a>
                                                </div>
                                                <div class="post-card__name">
                                                    <a href="/Blog/Single/@item.Id">@item.Title</a>
                                                </div>
                                                <div class="post-card__date">
                                                    @item.Date.ToString("M"),@item.Date.Year
                                                </div>
                                                <div class="post-card__content">@item.PreviewDescription</div>
                                                <div class="post-card__read-more">
                                                    <a href="#"
                                                   class="btn btn-secondary btn-sm">Read More</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        @if (Model.Blogs.Count != 0)
                        {
                            <partial name="_PaginationList" model="Model.Blogs.PaginationLinkModel" />
                        }
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                @await Component.InvokeAsync("BlogRightSideBar")
            </div>
        </div>
    </div>
</div>